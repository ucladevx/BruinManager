{
  "name": "Bruin Manager",
  "description": "Get myUCLA user data",
  "version": "1.0",
  "permissions": [
    "storage"
  ],
  "browser_action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.my.ucla.edu/*", 
        "*://*.arcane-cove-10079.herokuapp.com/*", 
        "*://*.google.com/*"  // will need to change this to bruinmanager when we get a domain but test on google for now
      ],
      "css": [ "loader.css" ],
      "js": ["content.js"]
    }
  ],
  "manifest_version": 2
}
